<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adhiragniroy.try1.MainActivity"
    android:background="@drawable/unnamed">


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_name"
        android:layout_below="@+id/textview"

        android:hint="Name"
        android:layout_x="1dp"
        android:layout_y="213dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/register_password"
        android:layout_below="@+id/register_name"

        android:hint="Password"
        android:layout_x="0dp"
        android:layout_y="262dp" />

    <Button
        android:onClick="register_register"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/register_register"
        android:layout_below="@+id/register_email"
        android:layout_x="0dp"
        android:layout_y="399dp"
        android:background="#6a466e95" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/register_email"
        android:layout_below="@+id/register_password"

        android:hint="Email"
        android:layout_x="1dp"
        android:layout_y="318dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Register"
        android:id="@+id/textView5"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_x="1dp"
        android:layout_y="62dp"
        android:textSize="30dp" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/hola"
        android:layout_x="245dp"
        android:layout_y="41dp"
        android:src="@drawable/log"/>



</AbsoluteLayout>
