<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/free"
    tools:context="com.example.adhiragniroy.try2.Main4Activity">

    <AbsoluteLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"

        android:paddingRight="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Select Semester"
            android:textSize="30dp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textAlignment="center" />

        <Button
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:text="YEAR 1"
            android:background="#64ffffff"
            android:id="@+id/button4"
            android:layout_x="10dp"
            android:layout_y="50dp"
            android:textSize="20dp"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:text="SEMESTER III"
            android:background="#64ffffff"
            android:id="@+id/button5"
            android:layout_x="10dp"
            android:layout_y="360dp"
            android:textSize="20dp"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:text="SEMESTER IV"
            android:background="#64ffffff"
            android:textSize="20dp"
            android:id="@+id/button6"
            android:layout_x="10dp"
            android:layout_y="670dp" />

        <Button
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:text="SEMESTER V"
            android:background="#64ffffff"
            android:id="@+id/button7"
            android:layout_x="10dp"
            android:layout_y="980dp"
            android:textSize="20dp"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:text="SEMESTER VI"
            android:background="#64ffffff"
            android:textSize="20dp"
            android:id="@+id/button8"
            android:layout_x="10dp"
            android:layout_y="1290dp" />

        <Button
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:text="SEMESTER VII"
            android:background="#64ffffff"
            android:id="@+id/button9"
            android:layout_x="10dp"
            android:layout_y="1600dp"
            android:textSize="20dp"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:text="SEMESTER VIII"
            android:textSize="20dp"
            android:background="#64ffffff"
            android:id="@+id/button10"
            android:layout_x="10dp"
            android:layout_y="1910dp" />

    </AbsoluteLayout>
</ScrollView>