<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.adhiragniroy.try1.MainActivity"
    android:background="@drawable/unnamed">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Login"
        android:textSize="30dp"
        android:id="@+id/textview"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_x="0dp"
        android:layout_y="75dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_name"
        android:layout_below="@+id/textview"
        android:hint="Name"
        android:layout_x="5dp"
        android:layout_y="219dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/main_password"
        android:layout_below="@+id/main_name"
        android:hint="Password"
        android:layout_x="5dp"
        android:layout_y="281dp" />

    <Button
        android:onClick="main_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/main_login"
        android:layout_below="@+id/main_password"
        android:layout_x="1dp"
        android:layout_y="350dp"
        android:background="#6a466e95" />

    <Button
        android:onClick="main_register"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/main_register"
        android:layout_below="@+id/main_login"
        android:layout_x="0dp"
        android:layout_y="410dp"
        android:background="#6a466e95" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/hola"
        android:layout_x="245dp"
        android:layout_y="41dp"
        android:src="@drawable/log"/>


</AbsoluteLayout>
