<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.adhiragniroy.try2.Main4Activity"
    android:background="@drawable/aerial">

    <AbsoluteLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Select Subject"
            android:textSize="30dp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textAlignment="center" />

        <Button
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:text="Maths III"
            android:id="@+id/button4"
            android:layout_x="10dp"
            android:layout_y="50dp"
            android:background="#64ffffff"
            android:textSize="20dp"
            />

        <Button
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:text="DISCRETE MATHEMATICS"
            android:background="#64ffffff"
            android:textSize="20dp"
            android:id="@+id/button5"
            android:layout_x="10dp"
            android:layout_y="350dp"
            />

        <Button
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:text="DATA STRUCTURES"
            android:id="@+id/button6"
            android:layout_x="10dp"
            android:layout_y="650dp"
            android:background="#64ffffff"
            android:textSize="20dp" />

        <Button
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:text="OBJECT ORIENTED PROGRAMMING"
            android:id="@+id/button7"
            android:layout_x="10dp"
            android:layout_y="950dp"
            android:background="#64ffffff"
            android:textSize="20dp"
            />

        <Button
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:text="LOGIC DESIGN"
            android:id="@+id/button8"
            android:layout_x="10dp"
            android:layout_y="1250dp"
            android:background="#64ffffff"
            android:textSize="20dp"
            />

        <Button
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:text="ELECTRONIC CIRCUITS"
            android:id="@+id/button9"
            android:layout_x="10dp"
            android:layout_y="1550dp"
            android:textSize="20dp"
            android:background="#64ffffff"
            />


    </AbsoluteLayout>
</ScrollView>